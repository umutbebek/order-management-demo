@{
    ViewData["Title"] = "Order Detail";
}
<h1>@ViewData["Title"]</h1>

<p>Here is the detail!</p>
<table style="width:100%" id="ordersTable">
    <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Status</th>
    </tr>
</table>

<script>
    $(document).ready(function () {

        window.call({
            path: "v1/order/" + window.getUrlVars()["id"],
            type: "get",
            data: {},
            success: (result) => {

                var item = result.Entity;
                //unsecure add, just for demo purpose
                $('#ordersTable').append(
                    `<tr><td>`+item.Id+`</td><td>`+item.ProductName+`</td><td>`+item.Price+`</td><td>`+item.Status+`</td></tr>`);

            }
        });
    });
</script>